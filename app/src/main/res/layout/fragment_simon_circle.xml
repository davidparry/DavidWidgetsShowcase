<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:dp="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.davidparry.widgets.showcase.ThreadLoadingImageFragment">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text"
                android:paddingTop="20dp" android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:layout_alignParentTop="true"
                android:text="@string/simon_load_message"/>
        <com.davidparry.widgets.SimonAnimation
                android:id="@+id/Circle"
                android:layout_width="300dp"
                android:layout_height="300dp"
                dp:sc_sections="4"
                dp:sc_line_color="@android:color/black"
                dp:sc_sections_color="#66FF33|#FF3300|#0000FF|#FFFF80"
                dp:sc_sections_highlight_color="#33CC33|#E62E00|#3366FF|#FFFF00"
                android:padding="0dp"
                android:background="@android:color/white"
                android:layout_below="@+id/text"

                />

        <Button android:layout_width="100dp" android:layout_height="100dp" android:id="@+id/animate"
                android:layout_below="@+id/Circle" android:text="Animate" android:padding="10dp"/>
    </RelativeLayout>
</FrameLayout>
